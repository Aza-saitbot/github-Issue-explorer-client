{
  "compilerOptions": {
    "baseUrl": "src",
    "typeRoots": [
      "node_modules/@types",
    ],
    "paths": {
      "@src/*": [
        "./*"
      ]
    },
    "outDir": "build",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules"
  ]
}
